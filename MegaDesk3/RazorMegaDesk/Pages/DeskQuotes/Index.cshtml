@page "{searchString?}"
@model RazorMegaDesk.Pages.DeskQuotes.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1>MegaDesk Quotes</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        Search Customers: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Search" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].RushDays)
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.NameSort">@Html.DisplayNameFor(model => model.DeskQuote[0].CustomerName)<i class="fas fa-sort"></i></a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.DateSort">@Html.DisplayNameFor(model => model.DeskQuote[0].QuoteDate)<i class="fas fa-sort"></i></a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].DeskWidth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].DeskDepth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].DeskMaterial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].DeskDrawers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.DeskQuote)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RushDays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuoteDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeskWidth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeskDepth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeskMaterial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeskDrawers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
